<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_yellow"
    tools:context=".login">


    <ImageView

        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.193"
        app:srcCompat="@mipmap/factcheck" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/subtitle"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:fontFamily="@font/seguisb"
        android:textColor="@color/text_semiblack"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/j_login"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/white_small"
        android:drawableRight="@drawable/arrow_right"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:fontFamily="@font/segoeui"
        android:text="I am a Journalist"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/text_semiblack"
        app:layout_constraintBottom_toTopOf="@+id/r_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/r_login"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/white_small"
        android:fontFamily="@font/segoeui"
        android:text="I am a Reader"
        android:textAlignment="center"
        android:textColor="@color/text_semiblack"
        android:drawableRight="@drawable/arrow_right"
        android:paddingRight="10dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/seguisb"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/text_semiblack"
        app:layout_constraintBottom_toTopOf="@+id/j_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>